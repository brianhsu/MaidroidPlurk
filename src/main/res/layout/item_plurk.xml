<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout 
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
      android:id="@+id/itemPlurkAvatar"
      android:src="@drawable/default_avatar"
      android:maxWidth="45dp"
      android:scaleType="centerInside"
      android:adjustViewBounds="true"
      android:layout_margin="5dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <Button
      android:id="@+id/itemPlurkCommentCount"
      android:text="5"
      android:minHeight="10dp"
      android:textSize="14sp"
      android:textColor="?android:textColorPrimary"
      android:drawableLeft="@drawable/comments"
      android:drawablePadding="5dp"
      android:layout_marginTop="5dp"
      android:textStyle="bold"
      android:background="@drawable/rounded_gray"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <Button
      android:id="@+id/itemPlurkLockIcon"
      android:text="私密"
      android:minHeight="10dp"
      android:textSize="14sp"
      android:textColor="?android:textColorPrimary"
      android:drawableLeft="@drawable/ic_btn_lock"
      android:drawablePadding="5dp"
      android:layout_marginTop="5dp"
      android:textStyle="bold"
      android:background="@drawable/rounded_blue"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

  </LinearLayout>

  <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
      android:id="@+id/itemPlurkReplurkerBlock"
      android:orientation="horizontal"
      android:layout_marginBottom="5dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView 
        android:id="@+id/itemPlurkReplurkerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?android:textColorPrimary"
        android:textSize="18sp"
        android:text="Nickname" />

      <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:background="#3B8610"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_marginLeft="5dp"
        android:text="轉噗" />
    </LinearLayout>

    <LinearLayout 
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">


      <TextView 
        android:id="@+id/itemPlurkDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?android:textColorPrimary"
        android:textSize="18sp"
        android:text="Nickname" />

      <TextView 
        android:id="@+id/itemPlurkQualifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:background="#E2560B"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_marginLeft="5dp"
        android:text="說" />
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical">
        <TextView
          android:id="@+id/itemPlurkDropdownMenu"
          android:text="ˇ"
          android:textSize="16sp"
          android:textColor="@color/dropdown_arrow"
          android:layout_marginRight="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      </LinearLayout>

    </LinearLayout>

    <TextView
      android:id="@+id/itemPlurkText"
      android:lineSpacingMultiplier="1.3"
      android:textSize="18sp"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="10dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <TextView
      android:id="@+id/itemPlurkPostedDate"
      android:text="YYYY-MM-DD HH:MM:SS"
      android:gravity="center_vertical|right"
      android:layout_marginRight="10dp"
      android:layout_marginTop="5dp"
      android:layout_marginBottom="5dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>


    <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:gravity="right"
      android:orientation="horizontal">

      <Button
        android:id="@+id/itemPlurkMute"
        android:text="消音"
        android:minHeight="10dp"
        android:textColor="?android:textColorPrimary"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_gray"
        android:drawableLeft="@drawable/mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

      <Button
        android:id="@+id/itemPlurkReplurk"
        android:minHeight="10dp"
        android:textColor="?android:textColorPrimary"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_gray"
        android:text="1"
        android:drawableLeft="@drawable/replurk"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

      <Button
        android:id="@+id/itemPlurkFavorite"
        android:minHeight="10dp"
        android:textColor="?android:textColorPrimary"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_gray"
        android:drawableLeft="@drawable/like"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    </LinearLayout>


  </LinearLayout>

</LinearLayout>
