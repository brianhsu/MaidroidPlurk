<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <idv.brianhsu.maidroid.plurk.view.LoadingIndicator
    android:id="@+id/fragmentUserProfileLoadingIndicator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

  <idv.brianhsu.maidroid.plurk.view.ErrorNoticeView
    android:id="@+id/fragmentUserProfileErrorNotice"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

  <ScrollView
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:orientation="vertical"
      android:layout_weight="1"
      android:layout_width="match_parent"
      android:layout_height="match_parent">


      <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
          android:id="@+id/userProfileAvatar"
          android:src="@drawable/default_avatar"
          android:paddingRight="10dp"
          android:maxWidth="80dp"
          android:scaleType="fitCenter"
          android:adjustViewBounds="true"
          android:layout_margin="5dp"
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

        <LinearLayout
          android:orientation="vertical"
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
              android:id="@+id/userProfileDisplayName"
              android:text="DisplayName"
              android:layout_weight="1"
              android:gravity="center"
              android:textColor="?android:textColorPrimary"
              android:textSize="18sp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

            <TextView
              android:id="@+id/userProfileNickName"
              android:text="NickName"
              android:layout_weight="1"
              android:gravity="center"
              android:textSize="16sp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

          </LinearLayout>
          <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
              android:orientation="vertical"
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <TextView
                android:id="@+id/userProfileKarma"
                android:text="115.48"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#2b9eff"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
              <TextView
                android:text="@string/fragmentUserProfileKarmaTitle"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
              android:orientation="horizontal"
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                  android:id="@+id/userProfilePosts"
                  android:text="456"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:textColor="#2b9eff"
                  android:textSize="16sp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
                <TextView
                  android:text="@string/fragmentUserProfilePostTitle"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:textSize="16sp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

              </LinearLayout>
              <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                  android:id="@+id/userProfileFriends"
                  android:text="456"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:textColor="#2b9eff"
                  android:textSize="16sp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
                <TextView
                  android:text="@string/fragmentUserProfileFriendsTitle"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:textSize="16sp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
              </LinearLayout>
              <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                  android:id="@+id/userProfileFans"
                  android:text="789"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:textColor="#2b9eff"
                  android:textSize="16sp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
                <TextView
                  android:text="@string/fragmentUserProfileFansTitle"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:textSize="16sp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
              </LinearLayout>
            </LinearLayout>
          </LinearLayout>

        </LinearLayout>

      </LinearLayout>


      <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <Button
            android:id="@+id/fragmentUserProfileFriendButton"
            android:text="@string/fragmentUserProfileAddFreind"
            android:textSize="16sp"
            android:padding="10dp"
            android:background="@drawable/rounded_blue"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
          <Button
            android:id="@+id/fragmentUserProfileFanButton"
            android:text="@string/fragmentUserProfileIsFollowing"
            android:textSize="16sp"
            android:background="@drawable/rounded_blue"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
          <Button
            android:id="@+id/fragmentUserProfilePrivateMessage"
            android:text="@string/fragmentUserProfileSendPrivateMessage"
            android:textSize="16sp"
            android:background="@drawable/rounded_blue"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
          android:id="@+id/fragmentUserProfileAbout"
          android:text="AboutMessage"
          android:textSize="16sp"
          android:lineSpacingMultiplier="1.3"
          android:autoLink="all"
          android:layout_weight="1"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

      </LinearLayout>
    </LinearLayout>
  </ScrollView>

</LinearLayout>
