<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <idv.brianhsu.maidroid.plurk.view.ErrorNoticeView
    android:id="@+id/fragmentEmoticonErrorNotice"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

  <idv.brianhsu.maidroid.plurk.view.LoadingIndicator
    android:id="@+id/fragmentEmoticonLoadingIndicator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

  <net.rdrei.android.viewpagerindicator.TitlePageIndicator
    android:id="@+id/fragmentEmoticonViewPagerIndicator"
    android:paddingTop="5dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent" />

  <android.support.v4.view.ViewPager
    android:id="@+id/fragmentEmoticonViewPager"
    android:paddingBottom="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

</LinearLayout>

