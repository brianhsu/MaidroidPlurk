<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <uk.co.senab.actionbarpulltorefresh.extras.actionbarcompat.PullToRefreshLayout
    android:id="@+id/fragementTimelinePullToRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ListView 
      android:id="@+id/fragmentTimelinePlurksListView"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />
  </uk.co.senab.actionbarpulltorefresh.extras.actionbarcompat.PullToRefreshLayout>

  <LinearLayout 
    android:id="@+id/fragmentTimelinePlurksEmptyNotice"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <TextView
      android:text="@string/fragmentTimelinePlurksEmptyNoticeText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  </LinearLayout>

</LinearLayout>
