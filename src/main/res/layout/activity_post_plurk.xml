<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <include layout="@layout/module_loading_indicator"/>
  <android.support.v4.view.ViewPager
    android:id="@+id/activityPostPlurkViewPager"
    android:layout_width="match_parent"
    android:layout_weight="0.9"
    android:layout_height="match_parent"/>

  <LinearLayout
    android:id="@+id/activityPostPlurkEmtoicon"
    android:layout_width="match_parent"
    android:layout_weight="0.7"
    android:layout_height="wrap_content"/>

  <idv.brianhsu.maidroid.ui.DialogFrame
    android:id="@+id/activityPostPlurkDialogFrame"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

</LinearLayout>

